<div class="container_12">
  <%= render "shared/flashpartial" %>
  <h1><%= page_header %></h1>

  <% if(@game.played?) %>
    <%= render "scoreboard" %>
  <% end %>
  <div class="clear"></div>
  <div class="grid_6">
    <% away_ppg = @game.away_team.points_per_game(@game.gamedate, 'away') %>
    <% home_def = @game.home_team.defensive_points_mod(@game.gamedate, 'home') %>
    <% home_ppg = @game.home_team.points_per_game(@game.gamedate, 'home') %>
    <% away_def = @game.away_team.defensive_points_mod(@game.gamedate, 'away') %>
    <ul>
      <li><%= "#{@game.away_team.abbreviation} Projected Points: #{'%.4f' % (away_ppg * home_def)}" %></li>
    </ul>
  </div>
  <div class="grid_6">
    <ul>
      <li><%= "#{@game.home_team.abbreviation} Projected Points: #{'%.4f' % (home_ppg * away_def)}" %></li>
    </ul>
  </div>

  <div id="team-defensive-stats">
    <table>
      <tr>
        <th></th>
        <th><%= @game.away_team.abbreviation %></th>
        <th><%= @game.home_team.abbreviation %></th>
      </tr>
      <tr>
        <td>PPG</td>
        <td>
          <%= "#{'%.4f' % @game.away_team.points_per_game(@game.gamedate)}" %></li>
        </td>
        <td>
          <%= "#{'%.4f' % @game.home_team.points_per_game(@game.gamedate)}" %></li>
        </td>
      </tr>
      <tr>
        <td>PPG (away/home)</td>
        <td><%= "#{'%.4f' % away_ppg}" %></td>
        <td><%= "#{'%.4f' % home_ppg}" %></td>
      </tr>
      <tr>
        <td>Def Mod</td>
        <td><%= "#{'%.4f' % @game.away_team.defensive_points_mod(@game.gamedate)}" %></td>
        <td><%= "#{'%.4f' % @game.home_team.defensive_points_mod(@game.gamedate)}" %></td>
      </tr>
      <tr>
        <td>Def Mod (away/home)</td>
        <td><%= "#{'%.4f' % @game.away_team.defensive_points_mod(@game.gamedate, 'away')}" %></td>
        <td><%= "#{'%.4f' % @game.home_team.defensive_points_mod(@game.gamedate, 'home')}" %></td>
      </tr>

    </table>
  </div> 
</div>

