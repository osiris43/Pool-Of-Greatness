<%= form_for @site do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description%>
  </p>
  <br />
  <p><%= f.submit (@site.new_record? ? "Create Site" : "Update Site") %></p>
<% end %>

