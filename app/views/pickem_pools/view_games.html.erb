<div class="pickem_container container_12">
  <%= render 'navigation' %>

<h2><%= @gamesHeader %></h2>
<% flash.each do |key, msg| %>
  <div id="<%= key %>">
    <p style="float:right;"><%= link_to_function 'X', "Effect.Fade('#{key}')" %></p>
    <p><%= msg %></p>
    <div class="clear"></div>
  </div>
<% end %>

<%= form_tag(save_picks_path, :method => "post") do %>

<table id="weeklygames">
  <tr>
    <th>Favorite</th>
    <th>Line</th>
    <th>Underdog</th> 
<% @games.each do |weeklygame| %>
  <tr class="gamerow" id="<%= "gameid_#{weeklygame.game.id}" %>">
    <td>
      <%= radio_button_tag("gameid_#{weeklygame.game.id}", weeklygame.game.favorite.id) %>
      <%= label_tag(:favorite, weeklygame.game.favorite_display_name) %> 
    </td>
    <td>
      <% if weeklygame.game.line > 0 %>
        <%= weeklygame.game.line * -1 %>
      <% else %>
        <%= weeklygame.game.line %>
      <% end %>
    </td>
    <td>
      <%= radio_button_tag("gameid_#{weeklygame.game.id}", weeklygame.game.underdog.id) %>
      <%= label_tag(:underdog, weeklygame.game.underdog_display_name) %> 
    </td>
  </tr>
<% end %>
</table>
<br />
<% if @games.count > 0 %>
  <%= label_tag("Monday Night over/under: #{@games[-1].game.overunder}") %>
<% end %>
<br /><br />
<%= label_tag(:mnftotal, "Monday Night Total") %>
<%= text_field_tag(:mnftotal) %><br /><br />
<%= submit_tag("Save Picks", :id => "save_weekly_picks") %>
<% end %>
</div>

