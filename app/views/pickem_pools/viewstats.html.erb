  <div id="content-header">
    <h1>Season Stats</h1>
  </div>
  <div class="container-fluid">
    <%= render "navigation" %>
    <div class="row-fluid">
      <div class="span12">
        <%= render 'shared/flashpartial' %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="widget-box">
        <div class="widget-title">
          <h5>All Players</h5>
        </div>
        <div class="widget-content nopadding">
          <table class="table table-bordered table-striped table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Won</th>
                <th>Lost</th>
                <th>Tied</th>
                <th>Win %</th>
                <th>Weeks Played</th>
              </tr>
            </thead>
            <tbody>
              <% @userstats.each do |stat| %>
                <tr class="<%= cycle("odd", "even") %>" >
                  <td><%= stat.name %></td>
                  <td><%= stat.won %></td>
                  <td><%= stat.lost %></td>
                  <td><%= stat.tied %></td>
                  <td><%= stat.win_percentage %></td>
                  <td><%= stat.weeks_played %></td>
                </tr>
              <% end %>
            </tbody>
      </table>
    </div>
  </div>
</div>
  
