<section id="sites_container">
  <h2>Your Sites</h2>
  
  <% current_user.sites.each do |site| %>
    <div id="site_container">
      <h3><%= site.name %></h3> <% if current_user.id == site.admin_id %>( <%= link_to("Add pool to this site", newpool_site_path) %> )<% end %>
      <h4>Pools</h4>
      <div id="pools">
        <% site.pools.each do |pool| %>
          <article>
            <div class="grid_6">
              <%= poolpath_for(pool) %>
            </div>
          </article>
        <% end %>
      </div>
        <div class="grid_6">
          <h4>Account Balance</h4>
          <span>$12.00</span>
        </div>
      </div>
  <% end %>
</section>
