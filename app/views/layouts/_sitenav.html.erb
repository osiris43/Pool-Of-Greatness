<div id="site-nav">
  <div class="container_12">
    <div class="grid_12">
      <ul class="site-nav-body">
        <li class="site-nav-menu-item">
          <%= link_to "Home", user_path(current_user)  %>
        </li>
        <li class="site-nav-menu-item">
          <%= link_to "Edit Profile", edit_user_path(current_user) %>
          </li>
        <% if current_user.admin? %>
          <li class="site-nav-menu-item"><%= link_to "Site Admin", games_path %> </li>
        <% end %>
        <% current_user.sites.each do |site| %>
          <% site.pools.each do |pool| %>
            <% if pool.active %>
              <li class="site-nav-menu-item">
                <%= poolpath_for(pool) %>
              </li>
            <% end %>
          <%end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
