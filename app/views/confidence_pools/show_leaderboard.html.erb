<%= render 'shared/poolbanner' %>
<div class="container_12">
  <%= render 'confidence_pools/navigation' %>
  <%= render 'shared/flashpartial' %>
  
  <table class="bowlgames">
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Won</th>
      <th>Lost</th>
      <th>Left</th>
      <th>Potential</th>
      <th>Percentage</th>
      <th>Largest Left</th>
      <th>Second Largest Left</th>
    </tr>
    <% @rank = 1 %>
    <% @leaderboard.entries.sort_by{|e| -e.won}.each do |entry| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td class="center_col"><%= @rank %></td>
        <td><%= entry.player.name %></td>
        <td class="center_col"><%= entry.won %></td>
        <td class="center_col"><%= entry.lost %></td>
        <td class="center_col"><%= entry.left %></td>
        <td class="center_col"><%= entry.potential %></td>
        <td class="center_col"><%= entry.percentage %></td>
        <td><%= entry.largest_left %></td>
        <td><%= entry.second_largest_left %></td>
      </tr>
      <% @rank += 1 %>
    <% end %>
  </table> 
</div>

