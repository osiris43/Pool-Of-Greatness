<div class="pickem_container container_12">
  <%= render 'navigation' %>
  <div class="grid_3">
    <div id="current_pick_container">
      <h3><%= "Your Week #{@current_week} Pick" %></h3>
      <span>
        <% if @current_pick.nil? %> 
          "No Pick"
          <br />
          <%= link_to "Make Pick", viewpicksheet_survivor_pool_path(@pool) %>
        <% else %>
          <%= @current_pick.team.display_name %>
          <br />
          <%= link_to "Change Pick", viewpicksheet_survivor_pool_path(@pool) %>
        <% end %>
      </span>
    </div>
  </div>
</div>
